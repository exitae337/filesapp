<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FilesApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        // Light theme
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/main</item>
        <item name="colorOnPrimary">@color/main_banner</item>
    </style>

    <style name="ScreenBackground">
        <item name="android:background">@color/main</item>
    </style>
    
    <style name="CardBackGround">
        <item name="android:background">@color/mainAccent</item>
    </style>

    <style name="ImageBackground">
        <item name="android:tint">@color/home_icons</item>
    </style>

    <style name="ImageBackgroundForWhite">
        <item name="android:tint">@color/white</item>
    </style>
    
    <style name="TextColor">
        <item name="android:textColor">@color/main_banner</item>
    </style>

    <style name="MainText">
        <item name="android:textColor">
            @color/main_banner
        </item>
    </style>

    <style name="BackgroundTint">
        <item name="android:backgroundTint">@color/main_banner</item>
    </style>

    <style name="PlanetColor">
        <item name="android:startColor">@color/main_banner</item>
    </style>

