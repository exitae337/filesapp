<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="@drawable/upload_file_bg"
    android:padding="20dp"
    android:gravity="center"
    tools:context=".excitingconnection.UploadFileSheet">

    <ImageView
        android:id="@+id/btn_uploadImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_upload_image"
        android:layout_margin="5dp"/>

    <ImageView
        android:id="@+id/btn_uploadFile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_upload_file"
        android:layout_margin="5dp"/>

    <ImageView
    android:id="@+id/btn_uploadAudio"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/ic_upload_audio"
    android:layout_margin="5dp"/>

</LinearLayout>